<li>
  <% if page.current? %>
    <span class="inline-flex min-w-[2.25rem] justify-center rounded-md bg-blue-600 px-3 py-2 text-sm font-medium text-white"><%= page.display_tag %></span>
  <% else %>
    <%= link_to page.display_tag, url_for(page.params), class: "inline-flex min-w-[2.25rem] justify-center rounded-md bg-white px-3 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 border border-gray-200" %>
  <% end %>
</li>
