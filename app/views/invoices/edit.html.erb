<% content_for :title, "請求の編集" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-600 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="mb-6 flex items-center justify-between">
    <h1 class="text-2xl font-bold text-gray-800">請求の編集</h1>
    <div class="flex gap-2">
      <%= link_to "表示", @invoice, class: "rounded-lg px-4 py-2 bg-gray-100 hover:bg-gray-50 text-gray-800" %>
      <%= link_to "一覧へ", invoices_path, class: "rounded-lg px-4 py-2 bg-gray-100 hover:bg-gray-50 text-gray-800" %>
    </div>
  </div>

  <%= render "form", invoice: @invoice %>
</div>
