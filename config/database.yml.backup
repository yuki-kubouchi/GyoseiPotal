# MySQL. Versions 5.5.8 and up are supported.
#
# Install the MySQL driver
#   gem install mysql2
#
# Ensure the MySQL gem is defined in your Gemfile
#   gem "mysql2"
#
# And be sure to use new-style password hashing:
#   https://dev.mysql.com/doc/refman/5.7/en/password-hashing.html
#
default: &default
  adapter: postgresql
  encoding: unicode
  pool: <%= ENV.fetch("RAILS_MAX_THREADS") { 5 } %>
  username: root
  password:
  socket: /tmp/mysql.sock

development:
  <<: *default
  database: gyosei_potal_development

test:
  <<: *default
  database: gyosei_potal_test

production:
  <<: *default
  url: <%= ENV['DATABASE_URL'] if ENV['DATABASE_URL'].present? %>
  database: <%= ENV['RENDER_DATABASE_NAME'] || 'gyosei_potal_production' %>
  username: <%= ENV['RENDER_DATABASE_USERNAME'] || 'gyosei_potal' %>
  password: <%= ENV['RENDER_DATABASE_PASSWORD'] || ENV['GYOSEI_POTAL_DATABASE_PASSWORD'] %>
  host: <%= ENV['RENDER_DATABASE_HOST'] || 'localhost' %>
  port: <%= ENV['RENDER_DATABASE_PORT'] if ENV['RENDER_DATABASE_PORT'].present? %>
